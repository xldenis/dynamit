<div class="feed" ng-controller="feed">
	Search: <input ng-model="query">
	
	<!-- <a href="" ng-click="removeSource('Facebook')">remove facebook posts</a> -->
	<br>
	<br>
	
	<input type="text" ng-model="url" size="80"/>
	<button ng-click="fetch()">fetch</button><br>
    
    <br>
    
    <span>Number of Posts: {{numPosts()}}</span>
    
	<ul>
		<li ng-repeat="post in posts | filter:query | filter:{visible:true}">
			<small>{{post.source}}</small>
			<p>{{post.content}}</p>
		</li>
	</ul>

	<pre>http status code: {{status}}</pre>
	<pre>http response data: {{data}}</pre>
</div>